			li
				a(data-rel="close").ui-icon-delete #{__i("Il tuo account")}
			li(data-role="list-divider")
			li(data-role="list-divider" style='background-color:#ddffdd;')
				h5  #{__i("Benvenuto")} #{userName}
				p #{__i("Da adesso Ã¨ attiva la funzione di save.")} 
			li(data-role="list-divider")
