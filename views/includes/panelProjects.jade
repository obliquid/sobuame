div(data-role='panel' id='panelProjects' data-display='overlay' )
	ul(data-role="listview")
		li
			a(data-rel="close").ui-icon-delete #{__i("Pubblicazioni")}
		li(style="padding:0;border:none;")
			div(data-role="navbar")
				ul
					li
						a(href="#popupAddProject" data-icon="plus" data-rel="popup" data-position-to="window" data-transition="pop") #{__i("Nuova")}
					li
						a(id="buttonDelProject" href="#popupDelProject" data-icon="minus" data-rel="popup" data-position-to="window" data-transition="pop") #{__i("Elimina")}
					li
						a(id="buttonModifyProject" href="#popupModifyProject" data-icon="pencil" data-rel="popup" data-position-to="window" data-transition="pop") #{__i("Rinomina")}
		li(id="empty-projects" data-role="list-divider")
			p  #{__i("Non hai ancora pubblicazioni su cui lavorare.")}
		li(data-role="list-divider")
	div(style="height:16px;")
	ul(data-role="listview" id='panelProjectsListview' data-autodividers="true"  data-filter='true' data-filter-placeholder='#{__i("Cerca per titolo")}')
	div(style="height:32px;")
	ul(data-role="listview")
		li(data-role="list-divider")


	div(data-role="popup" id="popupAddProject")
		form(id="addProjectForm")
			div(role="main").ui-content
				h3 #{__i("Nuova pubblicazione")}
				label(for="name") #{__i('Titolo')}
				input(type="text" name="name" id="name" value="")
				input(type="hidden" name="width" id="width" value="")
				input(type="hidden" name="height" id="height" value="")
				input(type="hidden" name="minPageQuantity" id="minPageQuantity" value="")
				input(type="hidden" name="dpi" id="dpi" value="")
				p(id="addProjectErrormsg" style="display:none;").ui-bar.ui-bar-a
				a(id="addProjectButton").ui-btn.ui-icon-cloud-upload.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Crea')}
				a(href="#" data-rel="back").ui-btn.ui-icon-delete.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Annulla')}
				
	div(data-role="popup" id="popupModifyProject")
		form(id="modifyProjectForm")
			div(role="main").ui-content
				h3 #{__i("Modifica pubblicazione")}
				label(for="name") #{__i('Titolo')}
				input(type="text" name="name" id="name" value="")
				label(for="spline") #{__i('Titolo sul dorso')}
				input(type="text" name="spline" id="spline" value="")
				p(id="modifyProjectErrormsg" style="display:none;").ui-bar.ui-bar-a
				a(id="modifyProjectButton").ui-btn.ui-icon-cloud-upload.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Salva')}
				a(href="#" data-rel="back").ui-btn.ui-icon-delete.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Annulla')}
				
	div(data-role="popup" id="popupDelProject")
		div(role="main").ui-content
			h3.ui-title(id='currentProjectTitle')
			p #{__i('Sicuro di voler eliminare questa pubblicazione e tutte le sue immagini?')}
			a(id="delProjectButton" data-icon="minus" data-rel="back").ui-btn.ui-icon-minus.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Elimina')}
			a(href="#" data-rel="back").ui-btn.ui-icon-delete.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Annulla')}

	div(data-role="popup" id="popupAddProjectSure")
		div(role="main").ui-content
			h3 #{__i("Modifiche non salvate.")}
			p #{__i("Attenzione ci sono modifiche non salvate per la pubblicazione aperta, se si procede andranno perse. Continuare?")}
			a(id="popupAddProjectSureButton").ui-btn.ui-icon-check.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Continua')}
			a(href="#" data-rel="back").ui-btn.ui-icon-delete.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Annulla')}
				

				
	div(data-role="popup" id="popupPrintProject")
		div(role="main").ui-content
			h3 #{__i("Ordina la stampa della tua pubblicazione.")}
			p #{__i("Se non hai ancora acquistato un prodotto da stampare, fallo ora su ")}
				a(href="http://#{sbam.config.wpSiteUrl}",target="_blank") #{sbam.config.wpSiteUrl}
			p #{__i("Di seguito la lista dei prodotti da te acquistati e validi per la stampa di questa pubblicazione:")}
			p #{__i("Scegli quello che vuoi usare e clicca su stampa!")}
			a(id="pdfDownloadLink" target="_blank" style="display:none;").ui-btn.ui-icon-check.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline
			a(id="popupPrintProjectButton").ui-btn.ui-icon-check.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Stampa')}
			a(href="#" data-rel="back").ui-btn.ui-icon-delete.ui-btn-icon-right.ui-shadow.ui-corner-all.ui-btn-inline #{__i('Chiudi')}

					
					
					
					
					